---
interface Props {
	titolo: string;
}

const { titolo } = Astro.props;
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header_black.astro';
import Footer from '../components/Footer_black.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import '../styles/global.css';
import {SEO} from 'astro-seo';

import { getLangFromUrl } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
---

<!doctype html>
<html lang={lang}>
	<head>
		<SEO
			title={SITE_TITLE}
			description={SITE_DESCRIPTION}
			openGraph={{
			basic: {
				title: SITE_TITLE,
				type: "website",
				image: "/favicon.svg",
			}
			}}
		/>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="keywords" content="home solutions, casa in bioedilizia, termotecnico, architetto, geometra, pratiche edilizie, vendita casa, acquisto casa, serramenti, pompe calore" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<link rel="icon" type="image/svg+xml" href="/sito_tekaa/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{titolo}</title>
	</head>
	<body>
        <div class="flex flex-col min-h-screen bg-white">
			<div class="bg-stone-800">
				<Header/>
			</div>
			<main class="w-screen md:w-4/5 mx-auto py-5">
				<slot />
			</main>
		<Footer />
        </div>
	</body>
</html>
